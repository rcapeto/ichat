// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @unique @default(uuid())
  first_name    String
  last_name     String
  email         String   @unique
  profile_image String?
  my_chats      Chat[]   @relation("my_chats")
  invited_chats Chat[]   @relation("invited_chats")
  password      String
  created_at    DateTime @default(now())
}

model Message {
  id         String   @id @unique @default(uuid())
  created_at DateTime @default(now())
  content    String
  type       String
  file_url   String?
  chat       Chat?    @relation(fields: [chat_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  chat_id    String?
}

model Chat {
  id         String    @id @unique @default(uuid())
  created_at DateTime  @default(now())
  messages   Message[]
  owner      User      @relation("my_chats", fields: [owner_id], references: [id])
  owner_id   String
  contact    User      @relation("invited_chats", fields: [contact_id], references: [id])
  contact_id String
}

model Logger {
  id         String   @id @unique @default(uuid())
  action     String
  type       String
  payload    String
  created_at DateTime @default(now())
}
